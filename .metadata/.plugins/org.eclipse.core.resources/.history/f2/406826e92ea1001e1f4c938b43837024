	@Override
	public Boolean insertRow(Alumno object) {
		String query = "INSERT INTO alumno (dni,nombre,apellido,edad,nivel) VALUES (?,?,?,?,?)";
		try(PreparedStatement ps = conn.prepareStatement(query)){
			ps.executeUpdate();
		}catch(SQLException ex) {
			ex.printStackTrace();
		}
		return true;
	}

